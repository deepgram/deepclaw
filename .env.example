# Deepgram
DEEPGRAM_API_KEY=your_deepgram_api_key
# TTS voice selection — format: aura-2-<name>-<lang> (see SKILL.md for options)
DEEPGRAM_TTS_MODEL=aura-2-thalia-en

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567
OWNER_PHONE=+15551234567
TWILIO_VALIDATE_SIGNATURES=true

# Telnyx
TELNYX_API_KEY=your_telnyx_api_key
TELNYX_PUBLIC_KEY=your_telnyx_public_key

# OpenClaw
OPENCLAW_GATEWAY_URL=http://127.0.0.1:18789
OPENCLAW_GATEWAY_TOKEN=your_openclaw_gateway_token
# NOTE: If using OpenClaw gateway for voice, set OPENCLAW_WS_DELTA_THROTTLE_MS=0
# in the gateway's own environment to disable delta throttling (default 150ms is too slow for voice).

# Server
HOST=0.0.0.0
PORT=8000

# Provider Selection (twilio or telnyx)
VOICE_PROVIDER=twilio

# Public URL for webhook signature validation and Twilio callbacks
# Example: https://abc123.ngrok-free.app
PUBLIC_URL=

# Local control endpoints (/api/call, /api/sms)
CONTROL_API_TOKEN=replace_with_random_secret
CONTROL_API_LOCALHOST_ONLY=true

# Optional SMS model override
# OPENCLAW_SMS_MODEL=openclaw/voice

# Shared persona injection for voice calls
VOICE_SHARED_PERSONA_ENABLED=true
OPENCLAW_MAIN_WORKSPACE=~/.openclaw/workspace
VOICE_PERSONA_MAX_CHARS=12000

# Voice agent model (optional — defaults to claude-haiku-4-5 for low latency)
# OPENCLAW_VOICE_MODEL=anthropic/claude-haiku-4-5-20251001
